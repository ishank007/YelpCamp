<%- include ('../partials/header')	%>
<div class='container'>
	<div class='row '>
		<h1 style='text-align:center;'>Edit <%=campground.name%></h1>
		<div style='width:30% ; margin:25px auto'>
		<form method='post' action='/campgrounds/<%=campground._id%>?_method=PUT'>
			<div class='form-group'>
				<input type='text'class='form-control' value='<%=campground.name %>' name='campground[name]'>
			</div>
			<div class='form-group'>
	<input type='number'class='form-control' value='<%=campground.price %>' name='campground[price]' min='0'>
			</div>
			<div class='form-group'>
				<input type='text'class='form-control' value='<%=campground.image %>' name='campground[image]'>
			</div>
			<div class='form-group'>
		<input type='text'class='form-control' value='<%=campground.description %>' name='campground[description]'>
			</div>
			<div class='form-group'>
				<button class='form-control btn btn-primary '>Submit!</button>
			</div>
			
		</form>
			<a href='/campgrounds'>Go Back!</a>
			
		</div>
	
		
	</div>

	
</div>	

<%- include ('../partials/footer')	%>
