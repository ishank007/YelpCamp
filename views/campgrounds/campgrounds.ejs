<%- include ('../partials/header')%>
	<div class="jumbotron">
  		<h1> <i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
  		<p>View our Handpicked Campgrounds all over the India</p>
  		<a href='/campgrounds/new' class='btn btn-md btn-primary'>Add a new Campground</a>
	</div>
<div class='container'>
	<div class='row	text-center ' style='display:flex;flex-wrap:wrap'>
		<%for( var i=0;i< campgrounds.length;i++){%>
				<div class='col-md-4 col-sm-6'>
					<div class='thumbnail'>
						<img src='<%=campgrounds[i].image%>'>
						<div class='caption'>
						<h4><a href='campgrounds/<%=campgrounds[i]._id %>'><%=campgrounds[i].name %> </a></h4>								</div>
					</div>
					
				</div>
		<%}									    	%>
		
	</div>
			
</div>
	

										

